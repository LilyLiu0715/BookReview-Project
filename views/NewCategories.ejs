    <style>
    .samesize{
        height:300px;
    }

    </style>


</head>


<div class = "container">
<h1> <%= books[0].genre%></h1>
    <div class="row ">
        <div class="row text-center" style="display:flex; flex-wrap:wrap;">
            <% books.forEach(function(book){ %>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                        <img src= "<%= book.image%>" class = "samesize">
                        <div class="caption">
                            <h4>
                                <%= book.name %>
                            </h4>
                        </div>
                        <p>
                            <a href="/bookDetail/<%= book._id %>" class="btn btn-primary">More Info</a>
                        </p>
                    </div>
                </div>
            <% }); %>
        </div>

    </div>

</div>
</div>



